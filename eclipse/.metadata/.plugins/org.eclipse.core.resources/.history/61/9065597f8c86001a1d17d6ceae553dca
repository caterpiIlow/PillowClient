package caterpillow.Module.Movement;
import org.lwjgl.input.Keyboard;

import caterpillow.Module.Category;
import caterpillow.Module.Module;
import caterpillow.Module.ModuleManager;
import caterpillow.event.EventTarget;
import caterpillow.event.events.EventUpdate;

public class Spider extends Module{
	public ModuleManager moduleManager;

	public Spider() {
		super("Spider", Keyboard.KEY_P, Category.MISC);
	}
	
	@EventTarget
	public void onUpdate(EventUpdate event) {
		//if(mc.thePlayer.isCollidedHorizontally && mc.thePlayer.moveForward > 0 && !mc.thePlayer.isAirBorne)
		//if(mc.thePlayer.isCollidedHorizontally)
			//System.out.println("yes");
			if(mc.thePlayer.isCollidedHorizontally && (mc.thePlayer.motionY <= -0.15D || mc.thePlayer.onGround))
				mc.thePlayer.jump();
	}
	
	@Override
	public void onDisable() {
		super.onDisable();
		
	}
	
}
